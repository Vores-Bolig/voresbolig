    margin-bottom: 48px;
}

.streg {
    border-top: 1px solid #d9d9d9;
    margin-bottom: 24px;
}

.undertitel {
  font-size: 16px;
  font-family: "Whyte";
  margin-bottom: 32px;
}

.text_oppe {
  font-size: 16px;
  font-family: "Whyte";
  margin-bottom: 24px;
}

.text_under {
  font-size: 16px;
  font-family: "Whyte";
