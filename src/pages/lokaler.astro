---
import BaseLayout from "../layouts/BaseLayout.astro"
import Product from "../components/Product.astro"
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

type Lokale = {
  id: number;
  title: string;
  city: string;
  price_weekday: number | null;
  max_persons: number | null;
  can_rent: string | null;
  image_url: string | null;
};

let rows: Lokale[] = [];

try {
  const res = await fetch(
    "https://invkqrczmevlsbzdnlja.supabase.co/rest/v1/Lokaler?select=id,title,city,price_weekday,max_persons,can_rent,image_url&order=id.asc",
    {
      headers: {
        apikey: "sb_publishable_c5vkkFb_XH0fhn9JCO6Dtg_wQ9vMSiY",
        Authorization: "Bearer sb_publishable_c5vkkFb_XH0fhn9JCO6Dtg_wQ9vMSiY",
      },
    }
  );

  if (!res.ok) {
    console.error("Supabase lokaler error", res.status, await res.text());
  } else {
    rows = await res.json();
  }
} catch (err) {
  console.error("Supabase lokaler fetch failed", err);
}

function formatPrice(price: number | null | undefined) {
  if (price == null) return "";
  return new Intl.NumberFormat("da-DK").format(price);
}
---

<BaseLayout> 
<Nav />
<main class="page"> 
<h1 class="lokaler">7 LOKALER</h1>
<p class="sorter"> SORTER EFTER: ANBEFALET </p>

<div class="desktop-labels">
  <span>BY:</span>
  <span>PRIS:</span>
  <span>PERSONER:</span>
  <span>KAN LEJES AF:</span>
</div>

<hr class="line"> </hr>

<div class="product-wrapper">
  {rows.map((row) => (
    <a class="productLink" href={`/lokale/${row.id}`}>
      <Product
        image={row.image_url ?? ""}
        by={row.city ?? ""}
        pris={row.price_weekday != null ? `Fra ${formatPrice(row.price_weekday)} kr.` : ""}
        personer={row.max_persons != null ? `Max. ${row.max_persons}` : ""}
        kanLejes={row.can_rent ?? ""}
      />
    </a>
  ))}
</div>
</main>
<Footer />
</BaseLayout>

<style>
 .page{
    margin-inline: 8px;
 }
   
    
    .lokaler {
        font-family: Whyte Inktrap;
    }

.value{
    color: #040404;
}
.productLink {
  display: block;
  color: inherit;
  text-decoration: none;
}



    .sorter {
        font-family: Whyte Inktrap;
        padding-top: 2rem;
        font-size: x-small;
        text-decoration: underline;
        margin-bottom: 8px;
    }

    .label {
        font-family: "Whyte Inktrap";
    }

    .line {
        border: none; 
        height: 0.1rem;
        background-color: #dddd;
    }

  
    .product-wrapper :global(.card .label),
    .product-wrapper :global(.card .value) {
        font-family: "Whyte Inktrap";
    }

    .desktop-labels{
        display: none;
    }


    @media (min-width: 750px) {
.page {
    margin-inline: 24px;
}
.desktop-labels {
    display: grid;
    grid-template-columns: 160px 160px 160px 1fr;
    column-gap: 32px;
    margin-bottom: 8px;

    font-family: "Whyte Inktrap";
    font-size: 11px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #000;
  }


   
        .product-wrapper :global(.card) {
            display: grid;
            grid-template-columns: 1fr ;  
            gap: 40px;
            align-items: center;
            padding: 32px 0;
            border-bottom: 1px solid #e5e5e5;
        }
        

        
        .product-wrapper :global(.content) {
            width: 100%;
        }

        .sorter{
            justify-self: end;
            text-align: right;
        }

        
        .product-wrapper :global(.info) {
            display: grid;
            grid-template-columns: 160px 160px 160px 1fr;
            column-gap: 32px;
            row-gap: 4px;
            margin-bottom: 16px;
        }

        
        .product-wrapper :global(.label) {
            font-size: 11px;
            letter-spacing: 0.06em;
            text-transform: uppercase;
            color: #666;
            display: none;
        }

        

        
        .product-wrapper :global(.value) {
            font-size: 14px;
            line-height: 1.4;
            color: #040404;
            position: relative;
            top: -240px;
        }

        
        .product-wrapper :global(.image) {
            width: 260px;
            height: 200px;
            justify-self: end;
            background-size: cover;
            background-position: center;
        }

    }
</style>
