<style>
   
    /* Base Styles */
    .lokaler {
        font-family: Whyte Inktrap;
        padding-top: 2rem;
    }
.value{
    color: #040404;
}



    .sorter {
        font-family: Whyte Inktrap;
        padding-top: 2rem;
        font-size: x-small;
        text-decoration: underline;
        margin-bottom: 8px;
    }

    .label {
        font-family: "Whyte Inktrap";
    }

    .line {
        border: none; /* fjerner standard */
        height: 0.1rem;
        background-color: #dddd;
    }

    /* Mobile: Default styling for all cards */
    .product-wrapper :global(.card .label),
    .product-wrapper :global(.card .value) {
        font-family: "Whyte Inktrap";
    }

    .desktop-labels{
        display: none;
    }

    /* ========================= */
    /* ===== DESKTOP ONLY ===== */
    /* ========================= */

    @media (min-width: 750px) {

.desktop-labels {
    display: grid;
    grid-template-columns: 160px 160px 160px 1fr;
    column-gap: 32px;
    margin-bottom: 8px;

    font-family: "Whyte Inktrap";
    font-size: 11px;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #000;
  }


   

        /* Hele kortet: tekst venstre, billede højre */
        .product-wrapper :global(.card) {
            display: grid;
            grid-template-columns: 1fr ;  /* tekst til venstre, billede til højre */
            gap: 40px;
            align-items: center;
            padding: 32px 0;
            border-bottom: 1px solid #e5e5e5;
        }
        

        /* Fjern mobil-stacking */
        .product-wrapper :global(.content) {
            width: 100%;
        }

        .sorter{
            justify-self: end;
            text-align: right;
        }

        /* Info-rækken → 4 kolonner */
        .product-wrapper :global(.info) {
            display: grid;
            grid-template-columns: 160px 160px 160px 1fr;
            column-gap: 32px;
            row-gap: 4px;
            margin-bottom: 16px;
        }

        /* Labels (BY, PRIS osv.) */
        .product-wrapper :global(.label) {
            font-size: 11px;
            letter-spacing: 0.06em;
            text-transform: uppercase;
            color: #666;
            display: none;
        }

        

        /* Values (Frederikssund, Fra 1.300 kr.) */
        .product-wrapper :global(.value) {
            font-size: 14px;
            line-height: 1.4;
            color: #040404;
            position: relative;
            top: -240px;
        }

        /* Billedet */
        .product-wrapper :global(.image) {
            width: 260px;
            height: 200px;
            justify-self: end;
            background-size: cover;
            background-position: center;
        }

    }




</style>
