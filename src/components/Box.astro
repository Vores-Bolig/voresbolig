---
export interface Line {
  text: string;
  dim?: boolean; 
}

export interface Props {
  number?: string | number;
  title?: string;

  
  lines?: (string | Line)[];
}

const {
  number = 1,
  title = "Ingen ejendomsværdiskat",
  lines = [
    "Du slipper for ejendomsværdiskat og mister ikke penge, hvis ejendomspriserne er faldet, den dag du vil fraflytte dit lejemål.",
    { text: "København", dim: true },
  ],
} = Astro.props;


const normalizedLines: Line[] = lines.map((l: string | Line) =>
  typeof l === "string" ? { text: l } : l
);
---

<section class="card">
  <div class="box">
    <div class="item">
      <button class="boxes" type="button">
        <span class="nr">{number}</span>
        <span class="ttl">{title}</span>
        <span class="icon">+</span>
      </button>

      <div class="content">
        {normalizedLines.map((line) => (
          <p class:list={["line", line.dim ? "line--dim" : ""]}>{line.text}</p>
        ))}
      </div>
    </div>
  </div>
</section>



<script is:inline>
  const items = document.querySelectorAll('.item');

  items.forEach(item => {
    const header = item.querySelector('.boxes');
    header?.addEventListener('click', () => {
      item.classList.toggle('active');
    });
  });
</script>

<style>
  .card {
    font-family: "Whyte";
    background: #FBFBFB;
    margin: 0;
    padding: 0;
  }

  .box {
    width: 100%;
    max-width: 390px;
    margin: 0 auto;
    border-top: 1px solid #D9D9D9;
  }

  .item {
    border-bottom: 1px solid #D9D9D9;
  }

  
  .boxes {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 12px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    background: none;
    border: none;
    text-align: left;
  }
  
  .boxes span:nth-child(2) {
  flex: 1;
  text-align: center;
}

  .nr { width: 24px; }
  .ttl { flex: 1; }

  .icon {
    font-size: 20px;
    transition: transform 0.2s ease;
  }

  .content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease;
    padding: 0 12px;
  }

  .item.active .content {
    max-height: 400px; 
    padding-bottom: 16px;
  }

  .item.active .icon {
    transform: rotate(45deg);
  }

  
  .line {
    margin: 0;
    padding-top: 10px;
    font-size: 14px;
    color: #040404;
  }

  .line--dim {
    opacity: 0.5;
  }
</style>

