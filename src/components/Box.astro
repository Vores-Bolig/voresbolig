---
export interface Props {
  number?: string | number;
  title?: string;
  text?: string;
}

const {
  number = 1,
  title = "Ingen ejendomsværdiskat",
  text = "Du slipper for ejendomsværdiskat og mister ikke penge, hvis ejendomspriserne er faldet, den dag du vil fraflytte dit lejemål."
} = Astro.props;
---

<section class="card">
<div class="box">
  <div class="item">
    <div class="boxes">
      <span>{number}</span>
      <span>{title}</span>
      <span class="icon">+</span>
    </div>

    <div class="content">
      <p>{text}</p>
    </div>
  </div>
</div>
<section/>

<style>
  .card {
    font-family: "Whyte";
    background: #fff;
    margin: 0;
    padding: 0;
    min-height: 844px;
  }

  .box {
    width: 100%;
    max-width: 390px;
    margin: 0 auto;
    border-top: 1px solid #e0e0e0;
  }

  .item {
    border-bottom: 1px solid #e0e0e0;
  }

  .boxes {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 12px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
  }

  .boxes span:first-child {
    width: 24px;
  }

  .icon {
    font-size: 20px;
    transition: transform 0.2s ease;
  }

  .content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease;
    padding: 0 12px;
    font-size: 14px;
    color: #333;
  }

  .item.active .content {
    max-height: 200px;
    padding-bottom: 16px;
  }

  .item.active .icon {
    transform: rotate(45deg);
  }
</style>

<script>
  const items = document.querySelectorAll('.item');

  items.forEach(item => {
    const header = item.querySelector('.boxes');
    header.addEventListener('click', () => {
      
      item.classList.toggle('active');
    });
  });
</script>