---
interface CardProps {
  image: string;
  by: string;
  pris: string;
  personer: string;
  kanLejes: string;
}

const { image, by, pris, personer, kanLejes } = Astro.props as CardProps;



---



<div class="card">
  <div class="image" style={`background-image: url(${image});`}>
    {!image && "Billede"}
  </div>
  <div class="content">
    
    <div class="info">
      <div class="label">BY</div><div class="value">{by}</div>
      <div class="label">PRIS</div><div class="value">{pris}</div>
      <div class="label">PERSONER</div><div class="value">{personer}</div>
      <div class="label">KAN LEJES AF</div><div class="value">{kanLejes}</div>
    </div>
    
  </div>
</div>

<style>
.card {
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 20px 0;
  border-bottom: 1px solid #ddd;
}

.image {
  width: 100%;
  height: 200px;
  background: #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 14px;
  background-size: cover;
  background-position: center;
}

.content h3 {
  font-size: 18px;
  margin-bottom: 14px;
}

.info {
  display: grid;
  grid-template-columns: 140px 1fr;
  row-gap: 12px;
  column-gap: 20px;
  font-size: 14px;
}

.label {
  color: #555;
}

.value {
  color: #000;
  line-height: 1.6;
}

@media (min-width: 768px) {
  .card {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 28px;
    padding: 28px 0;
  }

  .image {
    height: 180px;
  }
}
</style>


